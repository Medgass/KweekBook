<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Scrollable content constrained above the bottom navigation -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header removed as requested -->

            <!-- Simple Back Button (icon arrow) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonBack"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/button_back"
                    app:icon="@drawable/ic_arrow_back"
                    app:iconTint="@color/text_primary"
                    app:iconGravity="textStart"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_24"
                android:gravity="center_horizontal">

                <!-- Avatar -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="@dimen/radius_full"
                    app:cardElevation="@dimen/elevation_card">

                    <ImageView
                        android:id="@+id/userAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_user"
                        android:padding="@dimen/spacing_24"
                        android:background="@drawable/gradient_primary_accent" />
                </com.google.android.material.card.MaterialCardView>

                <!-- User Name -->
                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:text="Nom d'utilisateur"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <!-- User Email -->
                <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_4"
                    android:text="email@example.com"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_24">

                <!-- Borrowed Books -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_8"
                    app:cardCornerRadius="@dimen/radius_medium"
                    app:cardElevation="@dimen/elevation_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_16"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_book"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/borrowedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:text="0"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="Emprunts"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Favorites -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="@dimen/spacing_4"
                    app:cardCornerRadius="@dimen/radius_medium"
                    app:cardElevation="@dimen/elevation_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_16"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_heart_filled"
                            app:tint="@color/accent" />

                        <TextView
                            android:id="@+id/favoritesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:text="0"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="Favoris"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Reviews -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_8"
                    app:cardCornerRadius="@dimen/radius_medium"
                    app:cardElevation="@dimen/elevation_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_16"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_star"
                            app:tint="@color/accent" />

                        <TextView
                            android:id="@+id/reviewsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:text="0"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            android:textColor="@color/accent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="Avis"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Favorites Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/spacing_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes Favoris"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_12" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/favoritesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/emptyState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_48"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_heart"
                        android:alpha="0.3"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_16"
                        android:text="Aucun favori pour le moment"
                        android:textSize="@dimen/text_size_large"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>
            </LinearLayout>

            <!-- Account Actions / Edit Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_24">

                <!-- Edit Profile Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modifier Mon Profil"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_16" />

                <!-- Name Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nom"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomStart="@dimen/radius_medium"
                    app:boxCornerRadiusBottomEnd="@dimen/radius_medium"
                    app:boxCornerRadiusTopStart="@dimen/radius_medium"
                    app:boxCornerRadiusTopEnd="@dimen/radius_medium"
                    android:layout_marginBottom="@dimen/spacing_12">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomStart="@dimen/radius_medium"
                    app:boxCornerRadiusBottomEnd="@dimen/radius_medium"
                    app:boxCornerRadiusTopStart="@dimen/radius_medium"
                    app:boxCornerRadiusTopEnd="@dimen/radius_medium"
                    android:layout_marginBottom="@dimen/spacing_12">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Field -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nouveau Mot de Passe"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusBottomStart="@dimen/radius_medium"
                    app:boxCornerRadiusBottomEnd="@dimen/radius_medium"
                    app:boxCornerRadiusTopStart="@dimen/radius_medium"
                    app:boxCornerRadiusTopEnd="@dimen/radius_medium"
                    app:endIconMode="password_toggle"
                    android:layout_marginBottom="@dimen/spacing_16">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveProfile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Enregistrer Modifications"
                    android:textStyle="bold"
                    android:background="@drawable/gradient_primary_accent"
                    android:textColor="@color/white"
                    app:cornerRadius="@dimen/radius_medium"
                    android:layout_marginBottom="@dimen/spacing_16" />

                <!-- Logout Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Se dÃ©connecter"
                    android:textStyle="bold"
                    android:textColor="@color/destructive"
                    app:strokeColor="@color/destructive"
                    app:strokeWidth="2dp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    app:cornerRadius="@dimen/radius_medium" />
            </LinearLayout>

            <!-- Footer -->
            <include
                layout="@layout/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
