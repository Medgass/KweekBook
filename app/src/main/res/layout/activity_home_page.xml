<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:animateLayoutChanges="true">

    <!-- Gradient Background Overlay -->
    <View
        android:id="@+id/gradientOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_primary_accent"
        android:alpha="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Logo with Glow Effect -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="@dimen/spacing_32">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Glow/Blur Effect -->
            <View
                android:id="@+id/glowEffect"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/gradient_primary_accent"
                android:alpha="0.3" />

            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="192dp"
                android:layout_height="192dp"
                android:layout_gravity="center"
                android:src="@drawable/logo_kweekbook"
                android:scaleType="fitCenter"
                android:contentDescription="@string/app_name" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Title with Gradient Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_display"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@+id/logoCard"
        app:layout_constraintBottom_toTopOf="@+id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/spacing_8" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discover_next_read"
        android:textSize="@dimen/text_size_xlarge"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        app:layout_constraintBottom_toTopOf="@+id/enterButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/spacing_48" />

    <!-- Enter Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/enterButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="@string/enter_library"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:background="@drawable/gradient_primary_accent"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/radius_large"
        app:elevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/subtitleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/spacing_48"
        android:layout_marginEnd="@dimen/spacing_48" />

</androidx.constraintlayout.widget.ConstraintLayout>
